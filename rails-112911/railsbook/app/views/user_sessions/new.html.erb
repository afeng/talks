<div class="box" style="width: 400px">
  <h2>Login</h2>

  <% form_for @user_session, :url => user_sessions_url do |f| %>
    <%= f.error_messages %>
    <%= f.label :email %><br />
    <%= f.text_field :email %><br />
    <br />
    <%= f.label :password %><br />
    <%= f.password_field :password %><br />
    <br />
    <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
    <br />
    <%= f.submit "Login" %>
  <% end %>
</div>
