<div id="navbar" class="clearfix">
  <div id="nav-wrapper">
    <div class="left logo"><%= link_to image_tag("railsbook.png"), root_path %></div>
    <div class="right profile-menu">
      <%- if @current_user -%>
        <%= @current_user.name %>
        <div class="dropdown-menu closed">
          <a class="dropdown-button">&diams;</a>
          <ul class="dropdown-menu-content">
            <li><%= link_to 'Settings', edit_user_path(@current_user) %></li>
            <li><%= link_to 'Logout', logout_path %></li>
          </ul>
        </div>
      <%- else -%>
        <%= render 'shared/login', :session => @current_user_session %>
      <%- end -%>
    </div>
  </div>
</div>
